<div class="row">
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= image_tag @basic_info.avatar_url, class: "img-rounded" %>
      <div class="caption">
        <h3 class="text-center"><%= current_user.login %></h3>
        <p class="text-center">Joined on <%= Date.parse(@basic_info.created_at) %></p>
        <table class="table table-condensed">
          <tr>
            <th class="text-center">Followers</th>
            <th class="text-center">Starred</th>
            <th class="text-center">Following</th>
          </tr>
          <tr>
            <td class="text-center"><%= @basic_info.followers %></td>
            <td class="text-center"><%= @starred_repos.count %></td>
            <td class="text-center"><%= @basic_info.following %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Your Public Repositories</h3>
      </div>

      <ul class="list-group">
        <% @repos.each do |repo| %>
          <%= link_to repo.name, repo.svn_url, class: "list-group-item" %>
        <% end %>
      </ul>
    </div>
  </div>



  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Commit Summary</h3>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div>
</div>
