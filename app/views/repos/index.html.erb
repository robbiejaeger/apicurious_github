<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Your Public Repositories</h3>
      </div>

      <ul class="list-group">
        <% @repos.each do |repo| %>
          <%= link_to repo.svn_url, class: "list-group-item" do %>
            <%= repo.name %>
            <span class="badge"><%= pluralize(repo.changes_elapsed_time, "day") %> ago</span>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
